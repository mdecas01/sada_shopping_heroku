<% @cart.product_items.each do |item| %>
  <%= form_for(item) do |f| %>
    <tr>
      <td><%= item.quantity %>x <%= item.product.name %></td>
      <td><%= format_price(item.product) %></td> 
      <td><%= select_tag 'quantity', options_for_select(1..10, item.quantity) %></td>
      <td>
        <%= hidden_field_tag(:product_item_id, item.id) %>
        <%= f.submit 'Update item' %>
        <%= link_to 'Delete product', product_item_path(item), method: :delete, data: { confirm: 'Are you sure you want to delete the product?' } %>
      </td>
    </tr>
  <% end %>
<% end %>
